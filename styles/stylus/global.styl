//DOM
:root 
  font-size $global_text_size

body
  overflow-x hidden
  color $text_black

a
  text-decoration none

// CLASSES
.button
  border 1px solid $white
  border-radius 50px
  cursor pointer
  transition all 0.3s
  &:hover
    background-color $white
    color $blue

.filled_button
  background-color $white
  color $blue
  &:hover
    background-color $blue
    border-color $blue
    color $white
  
.overlay
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  background-color rgba(0,0,0,0.15)
  z-index 2

.backToTop
  width rem(50)
  height rem(50)
  position fixed
  bottom rem(50)
  right rem(50)
  display flex
  align-items center
  justify-content center
  background-color $blue
  color $white
  cursor pointer
  opacity 0
  transition opacity 0.3s
  will-change opacity
  &.active
    opacity 0.7
    &:hover
      opacity 1