// GLOBAL TO HOMEPAGE
#homepage
  section
    width 100%
    height 100vh

// HEADER SECTION 
section#homepage_header
  display flex
  align-items center
  padding-left 5vw
  background-image url(../../assets/images/header.png)
  background-size cover
  background-position center
  color $white

nav#homepage_header_menu
  width 100%
  height 10vh
  display flex
  justify-content flex-end
  align-items center
  position absolute
  padding2(0,60)
  top 0
  left 0
  z-index 99
  
  img
    position absolute
    left 2.5vw

  ul
    display flex
    flex-direction row

    li
      padding2(10,25)
      transition all 0.3s
      &:first-child
        margin-right rem(30)
      &:hover
        color $blue

div#homepage_header_content 
  width 100%
  z-index 3

  h1
    width 40%
    margin-bottom rem($margin)

  h2
    width 60%
    margin-bottom rem($margin)

  #header_content_buttons
    width 100%
    display flex
    align-items center

    .button
      padding2(20,50)
      &:first-child
       margin-right rem($margin)

// SLIDER SECTION
section#homepage_first_section
  padding rem($margin*2) 8.5vw 0 8.5vw

  h1
    width 100%
    text-align center
    margin-bottom rem($margin*2)

div#first_section_slider
  width 100%
  margin-bottom rem($margin)
  margin-right rem(-$margin)

  .item
    padding 0 rem(20)
    overflow hidden

div#first_section_infos
  width 100%
  display flex

  &>div
    width 25%
    height rem(200)
    display flex
    flex-direction column
    justify-content center
    align-items center
    border-right 1px solid $yellow
    &:last-child
      border-right none

    p.text_bold_font
      margin-bottom rem($margin/2)